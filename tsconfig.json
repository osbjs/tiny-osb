{
	"compilerOptions": {
		"strict": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es2017"],
		"declaration": true,
		"declarationDir": "./dist/types",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["test", "dist", "node_modules"]
}
